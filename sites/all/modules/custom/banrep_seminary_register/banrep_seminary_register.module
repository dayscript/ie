  $form['email'] = array(
    '#type' => 'textfield',
    '#title' => 'Email',
    '#required' => true,
    '#default_value' => variable_get('config_email_seminary', ''),
  );

  $form['submit_button'] = array(
    '#type' => 'submit',
    '#value' => 'Guardar',
  );
  banrep_seminary_register_event();
  return $form;
}

function banrep_seminary_settings_email_form_submit($form, &$form_state) {
  $email = $form_state['values']['email'];
  variable_set('config_email_seminary', $email);
}

function banrep_seminary_register_page() {
    $nid = drupal_get_query_parameters();
    $node = node_load($nid['nid']);

    return theme(
        'seminary_register',
        [
            'seminary' => $node->title,
            'date' => format_date($node->field_event_date['und'][0]['value'], 'standard_pubs'),
            'image' => $node->field_image['und'][0]['uri'],
            'image_alt' => $node->field_image['und'][0]['alt']
        ]
    );
    }

