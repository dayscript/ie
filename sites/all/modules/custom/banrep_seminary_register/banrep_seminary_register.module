/**
 * Get future events
 * @return array
 */
function banrep_seminary_register_event() {
  $output = array('<h3>Lo eventos que estan son los siguientes:</h3>');
  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'node')
    ->entityCondition('bundle', 'event')
    ->propertyCondition('status', 1)
    ->fieldCondition('field_tipo_de_evento', 'tid', 191)
    ->fieldCondition('field_event_date', 'value', time(), '>');
  $result = $query->execute();

  $exists = array_keys($result['node']);
  foreach ($exists as $value) {
    $node = node_load($value);
    $output[] = l($node->title, 'node/' . $value);
  }
  return $output;
}
